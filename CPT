print("1. What is the 8th largest measurement of storage? ")
a = print("   a. Yottabyte ")
b = print("   b. Treabyte ")
c = print("   c. Exabyte ")
d = print("   d. Zettabyte ")

print("                                                                                  ")

choice = input("Choose option a, b, c or d: ")

print("                                                                                  ")


while choice != "a" and choice != "b" and choice != "c" and choice != "d":
    print("Please choose a letter corresponding to the options above.")
    choice = input("Choose option a, b, c or d: ")

if choice != "c":
    count_wrong_answer += 1
    print("                                                                                  ")

elif choice == "c":
    count_right_answer += 1
    print("                                                                                  ")

print("Ok! Next Question.")

